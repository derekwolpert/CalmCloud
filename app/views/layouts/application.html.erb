<!DOCTYPE html>
<html>
  <head>
    <title>CalmCloud</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600&display=swap" rel="stylesheet">

    <script type="text/javascript">
      window.background1URL = "<%= image_url('background1.jpg') %>"
    </script>

    <script type="text/javascript">
      window.defaultWaveformIndex = "<%= image_url('default_waveform_index.png') %>"
    </script>

    <script type="text/javascript">
      window.defaultWaveformShowDark = "<%= image_url('default_waveform_show.png') %>"
    </script>

    <script type="text/javascript">
      window.defaultWaveformShowLight = "<%= image_url('default_waveform_show2.png') %>"
    </script>
    
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
